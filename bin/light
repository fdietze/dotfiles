#!/bin/sh
if [ $(cat $HOME/.colors) = "light" ]; then exit 0; fi
echo "light" > $HOME/.colors

cp $HOME/.config/termite/config-light $HOME/.config/termite/config
killall -USR1 termite

herbstclient set window_border_width 3
herbstclient set window_border_active_color '#FF0060'
herbstclient set window_border_normal_color '#CCC'

VIMS=`vim --serverlist`
for vim in $VIMS; do
     vim --servername $vim --remote-send '<Esc>:colorscheme goodmorning<CR>'
done

