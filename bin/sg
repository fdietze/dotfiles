#!/bin/bash
# interactively select a commit from git repo and execute command
# example usage: sg git checkout

gitlog() {
    git log --pretty=format:'%h %ad %s%d <%an> %ar' --abbrev-commit --date=short
}

gitlog | percol --prompt-bottom --result-bottom-up | cut -f1 | while read -r hash description; do $@ "$hash"; done
