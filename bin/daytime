#!/bin/bash

sundata=$(sunwait sun 50.77N 6.08W -p | head -13 | tail -1)
sunrise=$(echo $sundata | sed -r 's/.*rises ([0-9]+) .*/\1/')
sunset=$(echo $sundata | sed -r 's/.*sets ([0-9]+) .*/\1/')
time=$(date +"%H%M")
if [ $time -ge $sunrise ] && [ $time -le $sunset ]; then
    # day
    exit 0
else
    # night
    exit 1
fi
