cdt () {
    # cd into a temporary directory
    local t
    t=$(mktemp -d)
    echo "$t"
    builtin cd "$t"
}
cd() {
    # smart cd function, allows switching to /etc when running 'cd /etc/fstab'
    if (( ${#argv} == 1 )) && [[ -f ${1} ]]; then
        [[ ! -e ${1:h} ]] && return 1
        print "Correcting ${1} to ${1:h}"
        builtin cd ${1:h}
    else
        builtin cd "$@"
    fi
}

