[user]
    email = felix@beerleader.net
    name = Felix Dietze

[core]
    excludesfile = ~/.gitignore_global
    compression = 9
    pager = less -FRSX

[push]
    default = simple

[branch]
    autosetuprebase = always

[alias]
    co = checkout
    cob = checkout -b
    ci = commit
    cim = commit -m
    cam = commit -a -m
    amend = commit --amend
    unstage = reset HEAD
    st = status
    br = branch
    # %x08 cuts seconds and timezone away
    lg = log --pretty=format:'%Cred%h %C(reset)%C(dim)%ad%x08%x08%x08%x08%x08%x08%x08%x08%x08%Creset %s%C(yellow)%d%C(reset) %C(blue)<%an> %Cgreen(%ar)%Creset' --abbrev-commit --date=iso --graph --date-order
    df  = diff --color-words='[A-Z][a-z]*|[a-z]+|[^[:space:]]' --irreversible-delete --find-copies --find-copies-harder --ignore-space-at-eol --ignore-space-change --ignore-all-space --inter-hunk-context=2
    dfs = diff --color-words='[A-Z][a-z]*|[a-z]+|[^[:space:]]' --irreversible-delete --find-copies --find-copies-harder --ignore-space-at-eol --ignore-space-change --ignore-all-space --inter-hunk-context=2 --staged

[color]
    branch = auto
    diff = auto
    status = auto

[color "diff"]
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = meld


[tig]
    vertical-split = true
    tab-size = 4
    ignore-space = all
    ignore-case = true ; search
    ; wrap-lines = true ; conflicts with stage-update-line
    editor-line-number = true
    mouse-scroll = true
    show-changes = true

[tig "bind"]
    generic = ä Quit
    generic = ü view-close
    generic = <Up> move-up
    generic = <Down> move-down
    generic = g move-first-line
    generic = G move-last-line
    main = G move-last-line ; overwrite default keybinding
    status = A !git commit --amend
    stage = u stage-update-line
    stage = U status-update
    stage = A !git commit --amend
    stage = C !git commit
    ; generic = C !git cherry-pick %(commit)
